<div class="container p-5">
    <div class="row">
        <div class="col-sm-5 bg-light border rounded py-3">
            <form action="/editprofile" method="GET">
                <h2 class="text-center">Profile</h2>
                <div class="form-group">
                    <label for="_firstname">First Name : {{userdetails.dataValues.firstname}}</label>
                </div>
                <div class="form-group">
                    <label for="_lastname">Last Name : {{userdetails.dataValues.lastname}}</label>
                </div>
                <div class="form-group">
                    <label for="email">Email : {{userdetails.dataValues.email}}</label>
                </div>
                <div class="form-group">
                    <label for="_phone">Phone : {{userdetails.dataValues.phone}}</label>
                </div>
                <div class="form-group">
                    <label for="_experiences">Experiences : </label>
                    <textarea readonly>
                        {{userdetails.dataValues.experiences}}
                    </textarea>
                </div>
                <div class="form-group">
                    <label for="_skillset">Skill Set :</label>
                    <textarea readonly>
                        {{userdetails.dataValues.experiences}}
                    </textarea>
                </div>  
                <div class="form-group">
                    <label for="_hobby">Hobby :</label>
                    <textarea readonly>
                        {{userdetails.dataValues.hobby}}
                    </textarea>
                </div>
                <div class="form-group">
                    <label for="_achievement">Achievement</label>
                    <textarea readonly>
                        {{userdetails.dataValues.achievement}}
                    </textarea>
                </div>
                <button type="submit" class="btn btn-primary">Edit Profile</button>
                <button type="button" class="btn btn-primary" onClick="location.href='/deleteprofile';">Delete Profile</button>
            </form>
        </div>
    </div>
</div>