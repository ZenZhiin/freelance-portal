<div class="container p-5">
    <div class="row">
      <div class="col-sm-5 bg-light border rounded py-3">
        <h2 class="text-center">Login</h2>
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="_email">Email</label>
              <input type="text" name="email" id="_email" class="form-control" placeholder="Email" required>
            </div>
            <div class="form-group">
              <label for="_pass">Password</label>
              <input type="password" name="password" id="_pass" class="form-control" placeholder="Password" required>
            </div>
            <div>{{login_errors}}</div>
            <button type="submit" class="btn btn-primary">Login</button>
            <button type="button" class="btn btn-primary">Forgot Password</button>
          </form>
      </div>
      <div class="col-sm-6 bg-light rounded border py-3 offset-sm-1">
        <h2 class="text-center">Register</h2>
        <form action="/register" method="POST">
          <div class="form-group">
            <label>Email : </label> 
            <input type ="text" id="email" name="email" class="form-control mb-2 mr-sm-2 mb-sm-0" placeholder="email"  required>
            <p class="validate" id="email-validate" style="display:none;">Please enter your email.</p>
          </div>
          <div class="form-group">
            <label>Password : </label>
            <input type ="password" class="form-control mb-2 mr-sm-2 mb-sm-0" id="password" name="password" placeholder="password">
          </div>
          <div class="form-group">
            <label>First Name : </label> 
            <input type ="text" id="firstname" name="firstname" class="form-control mb-2 mr-sm-2 mb-sm-0" placeholder="First Name" required>
            <p class="validate" id="firstname-validate" style="display:none;">Please enter your first name.</p>
          </div>
          <div class="form-group">
            <label>Last Name : </label> 
            <input type ="text" id="lastname" name="lastname" class="form-control mb-2 mr-sm-2 mb-sm-0" placeholder="Last Name" required>
            <p class="validate" id="lastname-validate" style="display:none;">Please enter your last name.</p>
          </div>
          <div class="form-group">
            <label>Phone : </label> 
            <input type ="tel" id="phone" class="form-control mb-2 mr-sm-2 mb-sm-0" placeholder="Phone" required>
            <p class="validate" id="phone-validate" style="display:none;">Please enter your phone number.</p>
          </div>
          <div>{{register_error}}</div>
          <button type="submit" class="btn btn-success">Sign Up</button>
        </form>
      </div>
    </div>
</div>